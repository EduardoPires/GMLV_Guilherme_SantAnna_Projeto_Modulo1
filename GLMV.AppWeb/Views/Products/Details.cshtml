<div>
    <a asp-controller="products" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Alterar</a> | <a asp-controller="GestaoLoja" asp-action="Index" asp-route-id="@UserId" class="btn btn-warning">Retornar</a>
</div>
