        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtualizacao)
        </dd>
    </dl>
    
    <form asp-action="delete-product" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |  <a asp-controller="GestaoLoja" asp-action="Index" asp-route-id="@UserId" class="btn btn-warning">Retornar</a>
    </form>
</div>
